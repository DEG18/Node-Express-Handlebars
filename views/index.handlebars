<div class="text-center">
    <h1>Order Your Burgers!</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col predevouredBackground">
            <h2 class="text-center">Burgers that are not devoured!</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <div class="text-center">
                <img class="img" src="/assets/css/burger.png" alt="Burger">
            </div>
        </div>
        <div class="col devouredBackground">
            <h2 class="text-center">Burgers that are devoured!</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block }}
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
    <br>
    <br>
    <div class="text-center">
        <div class="col">
            <form class="create-form">
                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="name">
                    <input type="radio" name="devoured" value="0"> SURE?
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>
        <br>
        <br>
    </div>
</div>